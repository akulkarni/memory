# Tiger Memory Configuration
# Copy this file to .env and fill in your values

# Database Connection
TIGER_CLOUD_CONNECTION_STRING=postgresql://username:password@localhost:5432/tigermemory

# GitHub OAuth (required for authentication)
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Optional: Base URL (auto-detected in most cases)
# BASE_URL=http://localhost:3000

# Anthropic API Configuration
# Required: Anthropic API key for vector embeddings
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Logging Configuration
# Optional: Set logging level (debug, info, warn, error)
LOG_LEVEL=info

# Environment Configuration
# Optional: Set environment (development, production)
NODE_ENV=development