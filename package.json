{
  "name": "tigermemory",
  "version": "1.0.0",
  "description": "Persistent memory system for Claude Code that provides architectural intelligence",
  "main": "dist/server.js",
  "bin": {
    "tigermemory": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/migrations && cp src/migrations/*.sql dist/migrations/",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "memory",
    "architecture",
    "ai",
    "development"
  ],
  "author": "Tiger Memory Team",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "pg": "^8.11.0",
    "pgvector": "^0.1.8",
    "@anthropic-ai/sdk": "^0.27.0",
    "commander": "^11.0.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "crypto": "^1.0.1",
    "path": "^0.12.7",
    "fs": "^0.0.1-security",
    "@types/pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tigermemory/tigermemory.git"
  },
  "bugs": {
    "url": "https://github.com/tigermemory/tigermemory/issues"
  },
  "homepage": "https://github.com/tigermemory/tigermemory#readme"
}